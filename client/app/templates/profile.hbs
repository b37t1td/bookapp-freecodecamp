<h3>Your Profile</h3>

<hr />

<div class="form-group">

<form {{action 'saveUser' on='submit'}}>
  <div class="form-group">
    <label>Your name:</label>
    {{input type="text" class="form-control input-lg" value=user.name required=true}}
  </div>
  <div class="form-group">
    <label>Your location:</label>
    {{input type="text" class="form-control input-lg" value=user.location required=true}}
  </div>
  <div class="form-group text-center">
    <button type="submit" class="btn btn-success btn-lg {{if isFormInvalid 'disabled'}}" >
      <i class="fa fa-floppy-o"></i> &nbsp; SAVE </button>
  </div>
</form>

</div>
